<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:foregroundGravity="center"
        android:id="@+id/hot_img"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hot_img"
        android:textSize="@dimen/dp_20"
        android:textColor="#171515"
        android:id="@+id/hot_text1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hot_text1"
        app:layout_constraintLeft_toRightOf="@id/hot_img"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/hot_text2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hot_text3"
        app:layout_constraintLeft_toRightOf="@id/hot_img"
        app:layout_constraintTop_toBottomOf="@id/hot_text2"
        android:textColor="#BF3737"
        />
</androidx.constraintlayout.widget.ConstraintLayout>