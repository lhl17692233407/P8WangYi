<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shop.XiaDanActivity">

    <View
        android:id="@+id/dizhi_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="#DAD5D5"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dizhi_con"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/dizhi_view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择优惠券"
            android:textColor="#332D2D"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dizhi_img1"
            android:id="@+id/dizhi_text1"
            android:text="0张"
            android:textColor="#332D2D"
            android:layout_marginRight="@dimen/dp_10"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_rt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/dizhi_img1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/dizhi_con"
        android:background="#DAD5D5"
        android:id="@+id/dizhi_view2"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        app:layout_constraintTop_toBottomOf="@id/dizhi_view2"
        android:id="@+id/dizhi_con2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品合计"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/dizhitext1"
            android:textColor="#332D2D"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dizhi_view3"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#332D2D"
            android:text="￥0"
            android:id="@+id/dizhi_text2"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/dizhitext1"
            android:background="#DAD5D5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/dizhi_view3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            app:layout_constraintTop_toBottomOf="@id/dizhi_view3"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#332D2D"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/dizhitext2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dizhi_view3"
            app:layout_constraintBottom_toTopOf="@id/dizhi_view4"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#332D2D"
            android:text="￥0"
            android:id="@+id/dizhi_text3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/dizhitext2"
            android:background="#DAD5D5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/dizhi_view4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            app:layout_constraintTop_toBottomOf="@id/dizhi_view4"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="#332D2D"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/dizhitext3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/dizhi_view4"
            app:layout_constraintBottom_toTopOf="@id/dizhi_view5"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#332D2D"
            android:text="￥0"
            android:id="@+id/dizhi_text4"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintTop_toBottomOf="@id/dizhitext3"
            android:background="#DAD5D5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/dizhi_view5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dizhi_con2"
        app:layout_constraintBottom_toTopOf="@id/dihzi_con3"
        android:background="#DAD5D5"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/dihzi_con3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="实付：￥0"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/red"
            android:id="@+id/dizhi_text5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/red"
            android:text="去付款"
            android:gravity="center"
            android:textColor="#fff"
            android:id="@+id/dizhi_btn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>