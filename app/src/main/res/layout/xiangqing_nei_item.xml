<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/xiang_nei_item_img1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="matrix"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/xiang_nei_item_img1"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/xiang_nei_item_text1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@id/xiang_nei_item_text1"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/xiang_nei_item_text2"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>